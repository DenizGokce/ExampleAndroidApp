<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deniz.exampleandroidapp.view.edit.EditFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp">

        <EditText
            android:id="@+id/edit_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_line_indicator_line_width"
            android:ems="10"
            android:hint="First Name"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/edit_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edit_firstname"
            android:layout_below="@+id/edit_firstname"
            android:ems="10"
            android:hint="Last Name"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/editPersonButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_lastname"
            android:text="Edit Person"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="241dp" />

    </RelativeLayout>

</FrameLayout>
